<!DOCTYPE html>
<html>
    <head>
        <style>
            * {
                background: gray;
                font-family: arial, sans-serif;
                color: white;
            }
        </style>
    </head>
        <% if flash[:error] %>
            <%= flash[:error].each do |err| %>
                <li><%= err %></li>
            <% end %>
        <% end %>

        <h1>Hero Form</h1>
        <%= form_for @heroine do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br><br>
        <%= f.label :super_name %>
        <%= f.text_field :super_name %>
        <br><br>
        <%= f.collection_select :power_id, @powers, :id, :name %>
        <br><br>
        <%= f.submit %>
        <% end %>
    <body>
        
    </body>
</html>






